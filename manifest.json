{
  "manifest_version": 3,
  "name": "PDF Translator",
  "version": "4.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval'; worker-src blob:"
  },
  "content_scripts": [
    {
      "matches": ["https://www.deepl.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "description": "Chrome extension to format and translate selected text directly from PDF files with DeepL.",
  "icons": {
    "16": "img/translation_16.png",
    "48": "img/translation_48.png",
    "128": "img/translation_128.png"
  },
  "action": {
    "name": "Click to change the icon's color"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": ["<all_urls>", "file:///*/*"],
  "options_ui": {
    "page": "option.html"
  }
}
